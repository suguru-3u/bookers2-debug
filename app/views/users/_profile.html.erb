<table class="table">
		<tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>

		<tr>
			<th>name</th>
			<th><%= user.name %></th>
		</tr>

		<tr>
			<th>introduction</th>
			<th><%= user.introduction %></th>
		</tr>
		<tr>
			<th>follows</th><th><%= link_to user.followings.count,follows_user_path(user.id) %></th>
		</tr>
		<tr>
			<th>followers</th><th><%= link_to user.followers.count,followers_user_path(user.id) %></th>
		</tr>
</table>

<% if user.id != current_user.id %>
	<% if user.followed_by?(current_user) %>
		<%= link_to 'フォローを外す',user_relationships_path(user.id),method: :delete,class: 'btn btn-primary' %>
	<% else %>
		<%= link_to 'フォローする',user_relationships_path(user.id),method: :post,class: 'btn btn-success' %>
	<% end %>
<% else %>
	<div class="row">
		<%= link_to '',edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
	</div>
<% end %>
